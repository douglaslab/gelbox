<Sample
	name="1kb ladder"
	icon="beaker.png"
	iconScale=".5"
	>
	
<!-- https://www.neb.com/products/n3232-1-kb-dna-ladder#Product%20Information -->
	
	<Water value="">
	
	<Band>
		<Bases value="10000">
		<MoleculeCount value="1">
		
<!--	Mass is implicit.
		Mass = (Bases * MoleculeCount) / Avogadro's # -->
<!--	e.g. 42 = 10000 * Count / kA-->
		
<!--		<Mass  value="42">-->
<!--	Mass is ng - nanograms	-->

		<Degrade value="">
<!--	Draw smear ahead; it adds small particles.
		0..1..2
		0 means draw super sharp band
		1 full intensity visible, but vary y from Bases to 0 (Bases=0)
		1..2 fade out what is there
-->		
		
	</Band>
	
	
